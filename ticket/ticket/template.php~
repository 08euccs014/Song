<script type="text/javascript">
	$(document).ready (function(){
		$(".rbsl-Discus-title").click(function(){
			$('.rbsl-bottom-a').addClass('span3');
			var currentId1 = $(this).attr('dataId');
			$('.comman').hide('slow');
			$(currentId1).show('slow');
			$('.rbsl-bottom-b').addClass('span9');
			
		});
	});
